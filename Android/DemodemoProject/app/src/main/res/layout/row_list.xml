<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/userLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:weightSum="1"
    android:background="#E8EAF7">

        <ImageView
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:padding="10dp"
             android:id="@+id/studphoto_iv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.22" />

    <LinearLayout android:orientation="vertical"
        android:layout_alignParentRight="true"
        android:layout_width="138dp"
        android:layout_height="75dp"
        android:layout_marginRight="50dp"
        android:layout_weight="0.02">
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <TextView
        android:textColor="#4D4E52"
        android:id="@+id/name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textStyle="bold"

        />
    <TextView
        android:textColor="#4D4E52"
        android:id="@+id/name_tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textStyle="bold"

        />

</LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="#A2A5AE"
                android:id="@+id/agelable_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/name_tv"
                android:hint="AGE: "

                />
            <TextView
                android:textColor="#A2A5AE"
                android:id="@+id/age_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/name_tv"
                android:layout_toRightOf="@id/agelable_tv"
                android:layout_weight="0.33"
                android:paddingLeft="20sp"
                />

        </LinearLayout>

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:textColor="#A2A5AE"
        android:id="@+id/deptlabel_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/agelable_tv"

        android:hint="DEPT:- "
        />

    <TextView
        android:textColor="#A2A5AE"
        android:id="@+id/dept_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/agelable_tv"
        android:layout_toRightOf="@id/deptlabel_tv"
        android:textSize="20sp"
        android:paddingLeft="20sp"

        />

</LinearLayout>





</LinearLayout>



</LinearLayout>